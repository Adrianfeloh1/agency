---
import { Image } from 'astro:assets';
import adrian from '../assets/adrian.png';
const { 
  imgSrc = "/api/placeholder/400/300", 
  imgAlt = "Hermoso paisaje de montaña",
  title = "Aventura en las Montañas",
  description = "Descubre la majestuosidad de los Alpes Suizos en nuestro tour de 7 días. Experimenta vistas impresionantes, aire fresco de montaña y la emoción de alcanzar nuevas alturas."
} = Astro.props;
---

<div class="flex bg-white rounded-lg overflow-hidden max-w-2xl">
  <div class="w-1/3">
    <Image
        src={adrian}
        alt="Personas hablando"                                    
    />  
  </div>
  <div class="w-2/3 p-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-2">{title}</h2>
    <p class="text-gray-600">{description}</p>
    <div class="mt-4">
      <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">#aventura</span>
      <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700">#montañas</span>
    </div>
  </div>
</div>