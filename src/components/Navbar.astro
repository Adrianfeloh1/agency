---
// Navbar.astro
const navItems = [
  { href: "/", text: "inicio", number: "01" },
  { href: "/About", text: "nosotros", number: "02" },
  { href: "/Services", text: "servicios", number: "03" },
  { href: "/Contact", text: "contacto", number: "04" },
];

const currentPath = Astro.url.pathname;

// Prop para determinar si el navbar debe ser fijo
const { fixed = true } = Astro.props; // Valor por defecto es true
---

<nav class={`font-anton text-lg xl:text-4xl sm:text-2xl w-full bg-black bg-opacity-70 backdrop-blur-[0.3rem] py-8 sm:py-12 
  ${fixed ? 'absolute bottom-32 sm:bottom-72 lg:bottom-96' : 'fixed bottom-0 left-0 right-0 bg-black'}`}>
  <ul class="flex justify-center text-white gap-4 xl:gap-52 lg:gap-32 sm:gap-20">
    {navItems.map((item) => (
      <li class="relative">
        <a
          href={item.href}
          class={`tracking-wider transition-colors duration-300 ${
            currentPath === item.href ? "text-[#4392dc]" : "hover:text-[#4392dc]"}`
          }
        >
          {item.text}
        </a>
        <span class="absolute top-[-1.5rem] sm:top-[-2rem] left-0 text-sm sm:text-xl tracking-widest text-[#ffd153]">
          {item.number}
        </span>
      </li>
    ))}
  </ul>
</nav>
